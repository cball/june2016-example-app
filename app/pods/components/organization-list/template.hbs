{{#if hasStars}}
  <li>{{decorate-number starredOrganizations.length}} Stars</li>
{{/if}}

{{#each organizations as |organization|}}
  {{!-- {{action on-star organization}} --}}
  <li class="organization {{if organization.isStarred 'starred'}}">
    {{#link-to 'organizations.organization' organization.login}}
      {{#if hasBlock}}
        {{yield organization 'foo'}}
      {{else}}
        {{organization.name}}
      {{/if}}
    {{/link-to}}
  </li>
{{else}}
  {{!-- give consuming template control over how to render this  --}}
  {{yield to='inverse'}}
  {{!-- <li>No items.</li> --}}
{{/each}}
